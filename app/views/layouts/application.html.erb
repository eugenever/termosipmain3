<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= javascript_include_tag 'ckeditor/ckeditor.js' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon_1.ico' %>
    <meta name='yandex-verification' content='63a76e4d0b5b16af' />
    <meta name="google-site-verification" content="Qxvbr4SMOE7EImf8lW10lZD8dvnfUgHpOpJCB84lrRM" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="<%= yield(:meta_keywords) %>" /> 
    <meta name="description" content="<%= yield(:meta_description) %>" />
    <%= render 'layouts/shim' %>    
  </head>
  <body>
    <div id="wrapper">
      <%= render 'layouts/header' %>
      <%= render 'layouts/menu' %>
      <% if current_page?(root_path) %>
        <%= render 'layouts/mainheader' %>
      <% end %>
      <div class="" id="content">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= flash_class(key.to_s) %>" style="margin-top:15px;"><%= value %></div>
        <% end %>
        <%= yield %>      
      </div>      
    </div>
    <%= render 'layouts/footer' %>
    <a href='#' id='w2b-StoTop' style='display:none;'></a>
    <%# if Rails.env.development? %>
      <%#= debug(params) %>
      <!-- <div id="footnotes_holder"></div>  -->
    <%# end %>
  </body>
  <script type="text/javascript">
      $(document).ready(function() {
        if ($('textarea').length > 0) {
            var data = $('textarea');
            $.each(data, function(i) {
                CKEDITOR.replace(data[i].id);
            });
        }
      });
    </script>
</html>